{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
{% for image in product.images %}
  <a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
  </a>
{% endfor %}
<product-details>
  <h1>{{ product.title }}</h1>
  <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
    <select name="id" id="productSelect">
      {% for variant in product.variants %}
        {% if variant.available %}
          <option value="{{ variant.id }}">
            {{ variant.title }} - {{ variant.price | money_with_currency }}
          </option>
        {% else %}
          <option disabled="disabled">
            {{ variant.title }} - sold out
          </option>
        {% endif %}
      {% endfor %}
    </select>
    {{ current_variant.price | money }}
    <label for="Quantity">quantity</label>
    <input type="number" id="Quantity" name="quantity" value="1" min="1">

    {% if product.available %}
      {% assign buttonClass = 'product-available' %}
      {% assign buttonDisable = 'false' %}
    {% else %}
      {% assign buttonClass = 'product-out-of-stock' %}
      {% assign buttonDisable = 'disabled' %}
    {% endif %}

    <button type="submit" name="add" class="{{ buttonClass }}" {{ buttonDisable }} id="AddToCart">Add to cart</button>

    <div class="add-instructions">
      <input id="add-instructions" type="checkbox"/>
      <label for="add-instructions">
        Add instructions
      </label>
    </div>

    <div class="order-notes">
      <label for="order-notes">Order Notes:</label>
      <textarea id="order-notes" name="order-notes"></textarea>
    </div>

  </form>
  <div>{{ product.description }}</div>
</product-details>
<script src="{{ 'product.js' | asset_url }}" defer="defer"></script>
{{ 'component-product.css' | asset_url | stylesheet_tag }}
